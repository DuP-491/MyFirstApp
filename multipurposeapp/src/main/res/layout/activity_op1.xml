<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.divyansh.t1.Op1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/bk2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Media player"
        android:id="@+id/mp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/bk2"
        android:layout_toEndOf="@+id/bk2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:id="@+id/cam"
        android:layout_below="@+id/mp"
        android:layout_alignRight="@+id/mp"
        android:layout_alignEnd="@+id/mp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:id="@+id/cal"
        android:layout_below="@+id/cam"
        android:layout_alignRight="@+id/cam"
        android:layout_alignEnd="@+id/cam" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More"
        android:layout_below="@+id/cal"
        android:layout_alignRight="@+id/cal"
        android:layout_alignEnd="@+id/cal"
        android:id="@+id/op" />
</RelativeLayout>
