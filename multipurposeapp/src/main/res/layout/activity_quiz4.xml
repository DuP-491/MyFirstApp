<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ankur.project.quiz4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q4. Which country did Ravi Shastri play for?"
        android:id="@+id/tq4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/qb4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tq4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/qb4">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="Glamorgan"
            android:id="@+id/radioButton13"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#f4ec09"
            android:checked="false" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="Leicestershire"
            android:id="@+id/radioButton14"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#f4ec09"
            android:checked="false" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="Gloucestershire"
            android:id="@+id/radioButton15"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#f4ec09"
            android:checked="false" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="Lancashire"
            android:id="@+id/radioButton16"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#f4ec09"
            android:checked="false" />
    </RadioGroup>
</RelativeLayout>
