<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ankur.project.quiz5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q5. In the early Vedic-period, Varna system was based on "
        android:id="@+id/tq5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/qb5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tq5"
        android:layout_toStartOf="@+id/qb5"
        android:layout_alignRight="@+id/tq5"
        android:layout_alignEnd="@+id/tq5"
        android:weightSum="1"
        android:layout_above="@+id/qb5">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="Education"
            android:id="@+id/radioButton17"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#f4ec09"
            android:checked="false" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="Birth"
            android:id="@+id/radioButton18"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#f4ec09"
            android:checked="false" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="Occupation"
            android:id="@+id/radioButton19"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#f4ec09"
            android:checked="false" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Talent"
            android:id="@+id/radioButton20"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#f4ec09"
            android:checked="false" />

    </RadioGroup>
</RelativeLayout>
